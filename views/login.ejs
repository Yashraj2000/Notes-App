<%-  include  ("partials/header")    %>

<div class="row mt-5 mr-0">
  <div class="col-md-4 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
      <%-   include ("partials/errormsg")    %>
      <form action="/login" method="POST">
        <a href="/login/facebook" class="btn mb-3 btn-social btn-facebook"><i class="fab fa-facebook-f"></i>  with Facebook</a>
        
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-warning btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/register">Register</a>
        <span class="float-right">        Forgot Password? <a href="/forgot">Reset</a>        </span>
      </p>
    </div>
  </div>
</div>

<%-  include  ("partials/footer")    %>