<%-  include  ("partials/header")    %>
      <div class="row mt-5 mr-0">
        <div class="col-md-4 m-auto">
          <div class="card card-body">
            <h1 class="text-center"><i class="fas fa-user-plus"></i>Register</h1>
            <%-   include ("partials/errormsg")    %>
            <form action="/register" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" name="name" id="name" placeholder="username" class="form-control" value="<%= typeof name != 'undefined' ? name : '' %>"
              >
            </div>
            <div class="form-group">                                   
              <label for="email">Email</label>
              <input type="email" name="email" id="email" placeholder="Email" class="form-control"  value="<%= typeof email != 'undefined'?email:''  %>">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" placeholder="password" class="form-control"value="<%= typeof password != 'undefined' ? password : '' %>"              >
            </div>
            <div class="form-group">
              <label for="password2">Confirm Password</label>
              <input type="password" name="password2" id="password2" placeholder="Confirm password" class="form-control" value="<%= typeof password2 != 'undefined' ? password2 : '' %>"              >
            </div>
            <button type="submit" class="btn btn-warning btn-block">Register</button>
            <p class="lead mt-3">Have an account ? <a href="/login">Login</a></p>
            </form>
            </div>
          </div>
        </div>
      </div>





<%-  include  ("partials/footer")    %>