<%-  include ("partials/header")       %>
<%-   include ("partials/errormsg")    %>

<div class="container">

 <form action="/materials/<%= editdata.id%>/update" method="POST" style="width: 30%; margin: 0 auto; margin-top: 30px;">
         <h2 class="text-center"> Edit <%= editdata.title  %></h2>
         <br>
         <div class="form-group">
            <input type="text" class="form-control"  value="<%= editdata.title   %>" name="data[title]">
         </div>  
         
         <div class="form-group">
            <input type="text" class="form-control"  value="<%= editdata.image   %>" name="data[image]">
         </div>

         <div class="form-group">
            <textarea type="text" cols="30" rows="10" class="form-control"   name="data[outcomes]"><%- editdata.outcomes   %></textarea>
         </div>
         <div class="form-group">
            <input type="text" class="form-control"  value="<%= editdata.location   %>" name="data[location]">
         </div>

         <div class="form-group">
            <button class="btn btn-lg btn-secondary btn-block">submit</button>
         </div>
  </form>
  <div class="text-center">
    <a href="/materials" >Go back</a>
    <%-    include  ("partials/footer")      %>
  </div>
</div>











